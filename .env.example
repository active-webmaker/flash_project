# ============================================
# Flash AI Coding Agent - 환경 설정 예제
# ============================================
# 이 파일을 .env로 복사하고 필요한 값을 입력하세요

# =================================
# 데이터베이스 설정
# =================================
DB_NAME=flash
DB_USER=flash
DB_PASSWORD=flash_password_123
DB_PORT=5432

# =================================
# Django 설정
# =================================
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,django-api
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =================================
# Next.js 설정
# =================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Flash AI Coding Agent

# =================================
# API 설정
# =================================
API_BASE_URL=http://django-api:8000/api/v1

# =================================
# AI 에이전트 설정
# =================================
AGENT_ID=agent-docker
AGENT_VERSION=v1.0.0
LOCAL_LLM_URL=http://localhost:8001/v1

# =================================
# OpenAI 설정 (선택사항)
# =================================
OPENAI_API_KEY=your-openai-api-key-here

# =================================
# 프로덕션 배포 설정
# =================================
# AWS 설정 (필요한 경우)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# RDS 데이터베이스 (프로덕션)
# PROD_DATABASE_URL=postgresql://user:password@prod-db.region.rds.amazonaws.com:5432/flash

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json
